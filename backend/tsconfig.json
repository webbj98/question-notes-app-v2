{
    "compilerOptions": {
      "target": "es6",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "noEmit": true,  // Add this option
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true      
    },
    "include": ["src/**/*.ts", "../shared/**/*.ts"],
    "exclude": ["node_modules"]
  }
  